<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.fundaciobit.plugins</groupId>
	<artifactId>plugin-documentcustody-arxiudigitalcaib</artifactId>
	<version>3.0.13</version>
  <packaging>jar</packaging>

	<name>FundacioBit Plugins - Document Custody - ArxiuDigitalCAIB</name>

	<parent>
		<groupId>org.fundaciobit.plugins</groupId>
		<artifactId>plugins-documentcustody</artifactId>
    <version>3.0.0</version>
	</parent>

	<url>http://maven.apache.org</url>

	<dependencies>

		<dependency>
			<groupId>org.fundaciobit.plugins</groupId>
			<artifactId>plugins-api</artifactId>
			<version>1.0.0</version>
			<scope>provided</scope>
		</dependency>
    
    <dependency>
    	<groupId>org.fundaciobit.plugins</groupId>
	    <artifactId>plugin-documentcustody-api</artifactId>
	    <version>3.0.0</version>
      <scope>provided</scope>
    </dependency>
    
    <dependency>
      <groupId>es.caib.arxiudigital</groupId>
      <artifactId>arxiudigital-apirest</artifactId>
      <version>1.0.7</version>
    </dependency>
      
		<dependency>
			<!-- reuse src/test/java code from plugin-documentcustody-api  -->
	    <groupId>org.fundaciobit.plugins</groupId>
	    <artifactId>plugin-documentcustody-api</artifactId>
	    <version>3.0.0</version>
			<scope>test</scope>
			<classifier>tests</classifier>
		</dependency>

	</dependencies>


	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
					<compilerVersion>1.5</compilerVersion>
				</configuration>
			</plugin>


			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.1</version>
				<executions>
					<execution>
						<id>copy-dependencies</id>
						<phase>package</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/lib</outputDirectory>
							<overWriteReleases>false</overWriteReleases>
							<overWriteSnapshots>false</overWriteSnapshots>
							<overWriteIfNewer>true</overWriteIfNewer>
						</configuration>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>
</project>
